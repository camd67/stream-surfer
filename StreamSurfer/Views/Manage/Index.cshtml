@model IndexViewModel
@{
    ViewData["Title"] = "Manage your account";
}

<div class="settings-background background-image"></div>
<div class="content-wrapper settings-group">
    <div class="settings-header green-tip">
        <span>Account Settings</span>
    </div>
    <p class="text-info update-result">No profile changes detected</p>

    <div class="content-body">
        <div class="settings-section">
            <h4>Change your account settings</h4>
            <div class="form-group row">
                <span class="col-sm-3 settings-label">Password</span>
                <span class="col-sm-9">
                    @if (Model.HasPassword)
                    {
                        <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Change</a>
                    }
                    else
                    {
                        <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Create</a>
                    }
                </span>
            </div>
            <div class="form-group row">
                <span class="col-sm-3 settings-label" for="bio-input">Change Bio</span>
                <textarea class="col-sm-9" id="bio-input" rows="4"></textarea>
            </div>
            <div class="form-group row">
                <span class="col-sm-3 settings-label" for="bio-input">Select Profile Picture</span>
                <div class="col-sm-9">
                    <ul class="profile-picture-carousel">
                        <li>
                            <input type="radio" name="profile-picture" class="profile-picture-selector" data-image="logo.png" />
                            <img src="~/images/profile/logo.png" width="75" height="75" />
                        </li>
                        <li>
                            <input type="radio" name="profile-picture" class="profile-picture-selector" data-image="drink.png" />
                            <img src="~/images/profile/drink.png" width="75" height="75" />
                        </li>
                        <li>
                            <input type="radio" name="profile-picture" class="profile-picture-selector" data-image="hand.png" />
                            <img src="~/images/profile/hand.png" width="75" height="75" />
                        </li>
                        <li>
                            <input type="radio" name="profile-picture" class="profile-picture-selector" data-image="tree.png" />
                            <img src="~/images/profile/tree.png" width="75" height="75" />
                        </li>
                    </ul>
                </div>
            </div>

            <button class="btn orange-background settings-button" id="settings-save-changes">Save Changes</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/settings.js"></script>
}