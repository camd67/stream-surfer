@model IndexViewModel
@{
    ViewData["Title"] = "Manage your account";
}

<div class="settings-background background-image"></div>
<div class="container settings-group">
    <div class="settings-header green-tip">
        <span>Account Settings</span>
    </div>
    <p class="text-success">@ViewData["StatusMessage"]</p>

    <div class="settings-section">
        <h4>Change your account settings</h4>
        <div class="form-group row">
            <span class="col-sm-3 settings-label">Password:</span>
            <span>
                @if (Model.HasPassword)
                {
                    <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Change</a>
                }
                else
                {
                    <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Create</a>
                }
            </span>
        </div>
        <div class="form-group row">
            <span class="col-sm-3 settings-label" for="bio-input">Change Bio</span>
            <textarea class="col-sm-9" id="bio-input" rows="4"></textarea>
        </div>
    </div>
</div>