@{
    ViewData["Title"] = "Home";
}
@section Scripts{
    <script src="~/js/home.js"></script>
}

<header class="home-header">
    <div class="header-image"></div>
    <div class="header-content home-suggestion-banner">
        Let's watch
        <div class="line-break"></div>
        <span class="home-suggestion-text"></span><span class="blink">&#124;</span>
    </div>
    <div class="header-content home-header-search">
        <form asp-action="Search" method="get" id="search-form">
            <div class="input-group">
                <input type="text" id="query" name="query" class="search-box form-control" autocomplete="off"/>
                <i type="submit" class="glyphicon glyphicon-search input-group-addon" id="search-input"></i>
            </div>
        </form>
    </div>
</header>
<div class="card-section">
    <a class="card service-card" asp-Controller="Browse" asp-action="Services">
        <div class="card-inner-wrapper">
            <h2>SERVICES</h2>
        </div>
    </a>
    <a class="card show-card" asp-Controller="Browse" asp-action="Shows">
        <div class="card-inner-wrapper">
            <h2>SHOWS</h2>
        </div>
    </a>
    <a class="card movie-card" asp-Controller="Browse" asp-action="Movies">
        <div class="card-inner-wrapper">
            <h2>MOVIES</h2>
        </div>
    </a>
</div>