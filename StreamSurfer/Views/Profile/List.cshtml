                        </a>
                    </li>
                }
                @if (Model.Complete.Count == 0)
                {
                    <li class="profile-list-item">
                        No waves here!
                    </li>

                }
            </ul>
        </div>

    </div>
    <div>
        <h2 class="list-section-header">WANT TO WATCH</h2>
        <div class="list-section">
            <ul>
                @foreach (var s in Model.WantToWatch)
                {
